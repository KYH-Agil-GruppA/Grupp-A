@page
@model WebApp.Pages.Admin.DashboardModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Admin – Dashboard";
}

<section class="class-timetable-section admin-dashboard-section">
    <div class="container admin-dashboard-container">

        <!-- Header -->
        <div class="admin-dashboard-header">
            <h2 class="admin-dashboard-title">Admin Dashboard</h2>
            <p class="admin-dashboard-subtitle">
                Overview of users, members and trainers in your gym.
            </p>

            <!-- 🔍 SEARCH BAR UNDER HEADER -->
            <form method="get" class="admin-search-form">
                <div class="admin-search-group">
                    <span class="admin-search-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M21 21l-4.3-4.3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2" />
                        </svg>
                    </span>

                    <input type="text"
                           name="searchTerm"
                           class="admin-search-input"
                           placeholder="Search by ID, first name, last name or role..."
                           value="@Model.SearchTerm" />

                    <button type="submit" class="admin-search-btn">
                        Search
                    </button>

                    <a asp-page="./Dashboard" class="admin-search-clear">
                        Clear
                    </a>
                </div>
            </form>

        </div>

        <!-- CARD -->
        <div class="admin-card">

            <!-- HEADER -->
            <div class="admin-card-header">
                <h3 class="admin-card-title">Gym Overview</h3>
                <small class="admin-card-subtitle">
                    Summary of members & trainers
                </small>
            </div>

            <!-- BODY -->
            <div class="admin-card-body">

                <!-- TOP STATS -->
                <div class="admin-stats-row">
                    <div class="admin-stat">
                        <i class="fa fa-users"></i>
                        <h6>Total Users</h6>
                        <span>@Model.TotalUsers</span>
                    </div>

                    <div class="admin-stat">
                        <i class="fa fa-id-badge"></i>
                        <h6>Members</h6>
                        <span>@Model.MembersCount</span>
                    </div>

                    <div class="admin-stat">
                        <i class="fa fa-dumbbell"></i>
                        <h6>Trainers</h6>
                        <span>@Model.TrainersCount</span>
                    </div>
                </div>

                <!-- TITLE -->
                <div class="admin-users-title">
                    <h4>Latest Members & Trainers</h4>
                    <small>
                        Showing the most recently created users with roles Member/Trainer
                    </small>
                </div>

                <!-- USERS TABLE -->
                <div class="admin-table-card">
                    <div class="table-responsive">
                        <table class="table table-dark table-borderless align-middle mb-0">
                            <thead class="admin-table-header">
                                <tr class="text-uppercase text-secondary small">
                                    <th>ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Roles</th>
                                    <th class="text-center">Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.LatestUsers.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <em>No users found.</em>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var u in Model.LatestUsers)
                                    {
                                        <tr class="admin-table-row">
                                            <td>@u.Id</td>
                                            <td>@u.FirstName</td>
                                            <td>@u.LastName</td>
                                            <td>
                                                @foreach (var r in u.Roles)
                                                {
                                                    <span class="badge rounded-pill bg-secondary me-1">@r</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-page="/Admin/UserDetails"
                                                   asp-route-id="@u.Id"
                                                   class="btn btn-sm btn-outline-info"
                                                   title="View Profile">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- BACK BUTTON -->
                <div class="admin-back">
                    <a asp-page="/Index"
                       class="btn btn-outline-light">
                        <i class="fa fa-arrow-left me-1"></i> Back to Site
                    </a>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
