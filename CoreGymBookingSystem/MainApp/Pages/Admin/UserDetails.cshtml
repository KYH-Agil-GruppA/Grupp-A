@page "{id:int}"
@model WebApp.Pages.Admin.UserDetailsModel
@{
    ViewData["Title"] = "User Details";
}

<section class="class-timetable-section admin-dashboard-section">
    <div class="container admin-dashboard-container">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fa-regular fa-circle-check me-2"></i>
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- PAGE HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="admin-dashboard-title mb-1">
                    <i class="fa-solid fa-dumbbell me-2"></i>
                    Member Profile
                </h2>
                <p class="admin-dashboard-subtitle mb-0">
                    Manage member information, access and account status.
                </p>
            </div>

            <div>
                <a asp-page="/Admin/Dashboard"
                   class="btn btn-outline-light">
                    <i class="fa fa-arrow-left me-1"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <div class="row g-4">

            <!-- LEFT SIDE: PROFILE SUMMARY CARD -->
            <div class="col-lg-4">
                <div class="admin-card h-100">
                    <div class="admin-card-header text-center">
                        <div class="mb-3">
                            <!-- Avatar Initials -->
                            <div class="rounded-circle d-inline-flex justify-content-center align-items-center"
                                 style="width: 72px; height: 72px; background: rgba(255,255,255,0.06); font-size: 1.8rem;">
                                @Model.User.FirstName?.FirstOrDefault().ToString().ToUpper()
                                @Model.User.LastName?.FirstOrDefault().ToString().ToUpper()
                            </div>
                        </div>

                        <h3 class="admin-card-title mb-1">
                            @Model.User.FirstName @Model.User.LastName
                        </h3>
                        <small class="admin-card-subtitle d-block mb-2">
                            @Model.User.UserName
                        </small>

                        <!-- Roles display -->
                        <div class="mb-2">
                            @foreach (var role in Model.User.Roles)
                            {
                                <span class="badge rounded-pill bg-secondary me-1">@role</span>
                            }
                        </div>

                        <!-- Account status -->
                        <span class="badge @(Model.User.IsLocked ? "bg-danger" : "bg-success")">
                            @(Model.User.IsLocked ? "Locked Account" : "Active Account")
                        </span>
                    </div>

                    <div class="admin-card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fa-regular fa-envelope me-2"></i>
                                <strong>Email:</strong><br />
                                <span class="text-muted">@Model.User.Email</span>
                            </li>
                            <li class="mb-2">
                                <i class="fa-regular fa-id-badge me-2"></i>
                                <strong>User ID:</strong><br />
                                <span class="text-muted">@Model.User.Id</span>
                            </li>
                        </ul>

                        <!-- LOCK / UNLOCK / DELETE BUTTONS -->
                        <hr class="my-3" />
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @if (Model.User.IsLocked)
                            {
                                <form method="post" asp-page-handler="Unlock" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.User.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="fa-solid fa-lock-open me-1"></i> Unlock account
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Lock" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.User.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                        <i class="fa-solid fa-lock me-1"></i> Lock account
                                    </button>
                                </form>
                            }

                            <!-- DELETE USER -->
                            <form method="post" asp-page-handler="Delete" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                <input asp-for="UserViewModel.Id" type="hidden" />
                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                    <i class="fa-solid fa-trash me-1"></i> Delete user
                                </button>
                            </form>
                        </div>

                        <!-- ROLE MANAGEMENT -->
                        <h6 class="text-uppercase small text-secondary mb-2">
                            <i class="fa-solid fa-user-gear me-1"></i> Role management
                        </h6>
                        <form method="post" asp-page-handler="ChangeRole" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@Model.User.Id" />
                            <select asp-for="SelectedRole" class="form-select form-select-sm">
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role" selected="@(role == Model.SelectedRole ? "selected" : null)">
                                        @role
                                    </option>
                                }
                            </select>
                            <button type="submit" class="btn btn-sm btn-outline-info">
                                <i class="fa-solid fa-rotate me-1"></i> Update
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- RIGHT SIDE: EDITABLE DETAILS + MEMBERSHIP UI -->
            <div class="col-lg-8">
                <div class="card admin-card h-100">
                    <div class="card-header admin-card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="admin-card-title mb-1">Member Details</h3>
                            <small class="admin-card-subtitle">
                                Edit personal information and address.
                            </small>
                        </div>
                    </div>

                    <div class="card-body admin-card-body">

                        <!-- EDIT FORM -->
                        <!-- EDIT FORM -->
                        <form method="post" asp-page-handler="Save">
                            <input type="hidden" asp-for="Input.Id" />

                            <!-- 🔴 Validation summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.FirstName" class="form-label small text-uppercase text-secondary">
                                        First name
                                    </label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.LastName" class="form-label small text-uppercase text-secondary">
                                        Last name
                                    </label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Email" class="form-label small text-uppercase text-secondary">
                                        Email
                                    </label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- ADDRESS SECTION -->
                            <div class="mb-3">
                                <label asp-for="Input.Address" class="form-label small text-uppercase text-secondary">
                                    Street address
                                </label>
                                <input asp-for="Input.Address" class="form-control" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.City" class="form-label small text-uppercase text-secondary">
                                        City
                                    </label>
                                    <input asp-for="Input.City" class="form-control" />
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Country" class="form-label small text-uppercase text-secondary">
                                        Country
                                    </label>
                                    <input asp-for="Input.Country" class="form-control" />
                                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-3 mb-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-regular fa-floppy-disk me-1"></i> Save changes
                                </button>
                            </div>
                        </form>

                        <!-- MEMBERSHIP FEATURE SECTION (UI ONLY) -->
                        <hr class="my-4" />
                        <h5 class="text-uppercase small text-secondary mb-3">
                            <i class="fa-solid fa-id-card me-2"></i>Membership
                        </h5>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label small text-uppercase text-secondary">
                                    Membership type
                                </label>
                                <select class="form-select">
                                    <option>Basic</option>
                                    <option>Standard</option>
                                    <option>Premium</option>
                                    <option>VIP</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label small text-uppercase text-secondary">
                                    Status
                                </label>
                                <select class="form-select">
                                    <option>Active</option>
                                    <option>Frozen</option>
                                    <option>Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label small text-uppercase text-secondary">
                                    Payment method
                                </label>
                                <select class="form-select">
                                    <option>Card</option>
                                    <option>Autogiro</option>
                                    <option>Invoice</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-uppercase text-secondary">
                                    Start date
                                </label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-uppercase text-secondary">
                                    End date
                                </label>
                                <input type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-secondary">
                                Notes
                            </label>
                            <textarea class="form-control" rows="3"
                                      placeholder="Internal notes about membership, upgrades, freezes, etc."></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-outline-secondary" disabled>
                                <i class="fa-regular fa-floppy-disk me-1"></i>
                                Save membership (UI only – backend not implemented yet)
                            </button>
                        </div>

                        <hr class="my-4" />
                        <h5 class="text-uppercase small text-secondary mb-2">
                            <i class="fa-regular fa-calendar-check me-2"></i>Upcoming bookings
                        </h5>
                        <p class="text-muted mb-0">
                            You can later list all upcoming gym classes / PT sessions for this member here.
                        </p>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <partial name="_ValidationScriptsPartial" />
}
