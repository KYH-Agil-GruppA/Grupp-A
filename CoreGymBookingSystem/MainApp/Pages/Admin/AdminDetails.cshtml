@page "{id:int}"
@model WebApp.Pages.Admin.AdminDetailsModel
@{
    ViewData["Title"] = "Admin Profile";
}

<section class="class-timetable-section admin-dashboard-section">
    <div class="container admin-dashboard-container">

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fa-regular fa-circle-check me-2"></i>
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="admin-dashboard-title mb-1">
                    <i class="fa-solid fa-shield-halved me-2"></i>
                    Admin Profile
                </h2>
                <p class="admin-dashboard-subtitle mb-0">
                    View and manage admin account details.
                </p>
            </div>

            <div>
                <a asp-page="/Admin/Dashboard" class="btn btn-outline-light">
                    <i class="fa fa-arrow-left me-1"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <div class="admin-card">
            <div class="admin-card-header text-center">
                <h3 class="admin-card-title mb-1">
                    @Model.User.FirstName @Model.User.LastName
                </h3>
                <small class="admin-card-subtitle d-block mb-2">
                    @Model.User.UserName
                </small>

                <div class="mb-2">
                    @foreach (var role in Model.User.Roles)
                    {
                        <span class="role-badge @(role.ToLowerInvariant() == "admin" ? "role-badge-admin" : "")">
                            @if (role.ToLowerInvariant() == "admin")
                            {
                                <i class="fa-solid fa-shield-halved me-1"></i>
                            }
                            @role
                        </span>
                    }
                </div>
            </div>

            <div class="admin-card-body">
                <dl class="row">
                    <dt class="col-sm-3">User ID</dt>
                    <dd class="col-sm-9">@Model.User.Id</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.User.Email</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">
                        @Model.User.Address<br />
                        @Model.User.City, @Model.User.Country
                    </dd>
                </dl>
            </div>
            <form method="post" asp-page-handler="Delete" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                <button type="submit" class="btn btn-sm btn-outline-warning">
                    <i class="fa-solid fa-lock me-1"></i> delete user
                </button>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
