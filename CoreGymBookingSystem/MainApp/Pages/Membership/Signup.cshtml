@page "{id:int}" 
@model SignupModel 

<h2>Membership Signup</h2>

<div class="membership-summary">
    <h3>@Model.Form.MembershipName</h3>
    <p>Price: <strong>@Model.Form.Price kr</strong></p>
</div>

<form method="post">
    <input type="hidden"asp-for="Form.MembershipId" />

    <div class="form-group">
        <label>First Name</label>
        <input asp-for="Form.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="Form.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Form.Address" class="form-control" />
    </div>

    <div class="form-group">
        <label>Postal Code</label>
        <input asp-for="Form.PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <label>City</label>
        <input asp-for="Form.City" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="Form.PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Form.Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Continue to Payment</button>
</form>
