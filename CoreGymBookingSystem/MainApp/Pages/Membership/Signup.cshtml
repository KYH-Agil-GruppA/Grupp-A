@page
@model MainApp.Pages.Membership.SignupModel
@{
    Layout = "_Gymlayout";
}

<section class="checkout-section spad">
    <div class="container">

        <!-- --------- MEMBERSHIP SUMMARY --------- -->
        <div class="row mb-5">
            <div class="col-lg-8 offset-lg-2">
                <div class="card p-4 shadow-lg" style="border-radius: 10px; background:#fff;">

                    <h4 class="mb-3 text-center" style="font-weight:700; color:#ff6a00;">
                        Selected Membership
                    </h4>

                    <div class="d-flex align-items-center">
                        <img src="@Model.Input.ImageUrl"
                             style="width:120px; height:auto; border-radius:8px; margin-right:20px;" />

                        <div>
                            <h5 style="margin:0;">@Model.Input.MembershipName</h5>
                            <div style="font-size:20px; font-weight:600; color:#ff6a00;">
                                @Model.Input.Price kr
                            </div>
                            <p style="margin-top:5px;">@Model.Input.Description</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>



        <!-- --------- USER INFO FORM --------- -->
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card p-5 shadow-lg" style="border-radius: 10px;">

                    <h4 class="mb-4 text-center" style="font-weight:700;">Complete Your Information</h4>

                    <form method="post">



                        <input type="hidden" asp-for="Input.MembershipTypeId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>First Name</label>
                                <input asp-for="Input.FirstName" class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label>Last Name</label>
                                <input asp-for="Input.LastName" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>Address</label>
                            <input asp-for="Input.Address" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>Phone</label>
                            <input asp-for="Input.Phone" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100"
                                style="background:#ff6a00; border:none; padding:12px; font-size:18px;">
                            Continue
                        </button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>
