@page
@model MainApp.Pages.Membership.IndexModel
@{
    Layout = "_Gymlayout";
}

<section class="pricing-section spad">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h3 style="font-weight:700;">CHOOSE YOUR PRICING PLAN</h3>
                <p class="text-muted">Select the membership plan that fits you best.</p>
            </div>
        </div>

        <div class="row">

            @foreach (var item in Model.Memberships)
            {
                <div class="col-lg-4 col-md-6 mb-4">

                    <div class="card shadow-lg p-3" style="border-radius:10px;">
                        <img src="@item.ImageUrl" class="card-img-top" style="border-radius:8px;" />

                        <div class="card-body text-center">
                            <h4 style="font-weight:700;">@item.Name</h4>

                            <h3 style="color:#ff6a00; font-weight:700;">
                                @item.Price,00 kr
                            </h3>

                            <p class="text-muted">@item.Description</p>

                       
                            <button class="btn btn-primary w-100 choose-btn"
                                    style="background:#ff6a00; border:none; padding:12px; font-size:16px;"
                                    data-id="@item.Id"
                                    data-name="@item.Name"
                                    data-price="@item.Price"
                                    data-description="@item.Description">
                                CHOOSE
                            </button>

                        </div>
                    </div>

                </div>
            }

        </div>

    </div>
</section>


<!-- GLOBAL MODAL (Bootstrap 4 — SAFE STRUCTURE) -->
<div class="modal fade" id="membershipModal" tabindex="-1" role="dialog" aria-labelledby="membershipModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="membershipModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <p id="modalDescription" class="text-muted"></p>
                <h4 id="modalPrice" style="color:#ff6a00;"></h4>

                <!-- ********* FORM IS HERE ********* -->
                <form id="purchaseForm" method="get" action="/Membership/Signup">

                    <input type="hidden" name="id" id="membershipId" />

                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" name="startDate" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100"
                            style="background:#ff6a00; border:none; margin-top:20px;">
                        ADD TO CART
                    </button>

                </form>
                <!-- ********* END OF FORM ********* -->

            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {

            $('.choose-btn').click(function () {

                $('#membershipId').val($(this).data('id'));
                $('#membershipModalLabel').text($(this).data('name'));
                $('#modalDescription').text($(this).data('description'));
                $('#modalPrice').text($(this).data('price') + " kr");

                $('#membershipModal').modal('show'); 
            });

        });
    </script>
}

